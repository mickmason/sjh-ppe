{
	"env": {
  	"browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
	 	"Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
		"gsap": "readonly",
		"$global": "readonly"
  },
  "parserOptions": {
  "ecmaVersion": 2020,
	"sourceType": "script",
	"impliedStrict": true
  },
  "rules": {
  	"indent": [
    	"error",
      "tab"
		],
  "linebreak-style": [
  	"error",
    "unix"
  ],
  "quotes": [
  	"error",
  	"single",
		{
			"allowTemplateLiterals": true
		}
   ],
   "semi": [
   	"error",
   	"always"
   ]
	}
}